---
interface Props {
  items: {
    text: string;
    href?: string;
  }[];
}

const { items } = Astro.props;
---

<nav class="text-sm text-gray-500 mb-4 not-prose" aria-label="Breadcrumb">
  <ol class="list-none p-0 ps-0 m-0 inline-flex">
    {items.map((item, index) => (
      <li class="flex items-center">
        {item.href ? (
          <a href={item.href} class="hover:text-primary">{item.text}</a>
        ) : (
          <span class="text-gray-700">{item.text}</span>
        )}
        {index < items.length - 1 && (
          <span class="mx-2">â€º</span>
        )}
      </li>
    ))}
  </ol>
</nav>