---
// Get the current language from the Astro global
const { lang = "en", size } = Astro.props;
const isTurkish = lang === "tr";
---

<footer class="mt-12 border-t border-gray-200 dark:border-gray-700">
  <div
    class={`mx-auto max-w-${size === "small" ? "3xl" : "5xl"} ${size === "small" ? "px-5 md:px-3 lg:px-4" : "px-4 sm:px-6 lg:px-8 xl:px-0"} py-8`}
  >
    <!-- Two column layout - stack on mobile/tablet, side-by-side on desktop -->
    <div class="grid gap-8 lg:grid-cols-2 lg:gap-12">
      <!-- Left column - Site branding and links -->
      <div>
        <!-- Site logo/title -->
        <h2 class="mb-4">
          <a
            href={isTurkish ? "/tr" : "/"}
            class="mfyz-logo font-secondary text-xl dark:text-white"
          >
            mfyz
          </a>
        </h2>

        <!-- Links -->
        <div
          class="flex flex-wrap gap-4 text-sm text-gray-500 dark:text-gray-400"
        >
          <a
            href={isTurkish ? "/hakkinda/" : "/about/"}
            class="transition-colors hover:text-primary"
          >
            {isTurkish ? "Hakkında" : "About"}
          </a>

          <a
            href={isTurkish ? "/" : "/tr/"}
            class="transition-colors hover:text-primary"
          >
            {isTurkish ? "English" : "Türkçe"}
          </a>

          <a
            href={isTurkish ? "/lisans/" : "/license/"}
            class="transition-colors hover:text-primary"
          >
            {isTurkish ? "Lisans" : "License"}
          </a>

          <a
            href={isTurkish ? "/tr/rss.xml" : "/rss.xml"}
            class="flex items-center gap-1 transition-colors hover:text-primary"
            title={isTurkish ? "RSS Beslemesi" : "RSS Feed"}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-4 w-4"
            >
              <path d="M4 11a9 9 0 0 1 9 9"></path>
              <path d="M4 4a16 16 0 0 1 16 16"></path>
              <circle cx="5" cy="19" r="1"></circle>
            </svg>
            RSS
          </a>
        </div>

        <!-- Copyright text -->
        <div class="mt-4 text-xs text-gray-400 dark:text-gray-500">
          © 2003 MFYZ. {
            isTurkish ? "Tüm hakları saklıdır" : "All rights reserved"
          }
        </div>
      </div>

      <!-- Right column - Newsletter subscription -->
      <div>
        <p class="mb-3 text-sm text-gray-600 dark:text-gray-400">
          {
            isTurkish
              ? "En son yazıları almak için bültene abone olun."
              : "Subscribe to newsletter to get latest posts."
          }
        </p>
        <div id="mc_embed_signup">
          <form
            id="mc-embedded-subscribe-form"
            class="validate"
            action={`https://mfyz.us2.list-manage.com/subscribe/post?u=d428f29bd92f8490a71f5b5de&id=${isTurkish ? "4ce398796d" : "ff24006d41"}`}
            method="post"
            name="mc-embedded-subscribe-form"
            novalidate=""
            target="_blank"
          >
            <div id="mc_embed_signup_scroll" class="flex">
              <div class="flex-1">
                <input
                  id="mce-EMAIL"
                  class="email w-full rounded-l-md border border-r-0 border-gray-300 px-3 py-2 text-sm focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary dark:border-gray-600 dark:bg-gray-800 dark:text-white"
                  name="EMAIL"
                  required=""
                  type="email"
                  value=""
                  placeholder={isTurkish ? "e-posta adresi" : "email address"}
                />
              </div>
              <div class="btn">
                <button
                  id="mc-embedded-subscribe"
                  class="button flex cursor-pointer items-center justify-center rounded-r-md border border-l-0 border-primary bg-primary py-1.5 pl-3 pr-2.5 text-sm font-medium text-white transition-colors hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 dark:focus:ring-offset-gray-900"
                  name="subscribe"
                  type="submit"
                  aria-label={isTurkish
                    ? "Bültene abone ol"
                    : "Subscribe to newsletter"}
                >
