---
// Tags.astro - Tag list component (converted from React)

// Define interface for component props
interface Props {
  list: string[];
  className?: string;
}

// Get props from the component invocation
const { list, className = "" } = Astro.props as Props;

// Check if we need to use light tags on dark background
const isLightTags = className.includes("tags-light");
---

<div class={`flex w-full flex-wrap gap-2 ${className}`}>
  {
    list.map((tag: string) => (
      <span class={isLightTags ? "tag-light" : "tag"}># {tag}</span>
    ))
  }
</div>
