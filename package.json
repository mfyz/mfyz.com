{
  "name": "mfyz-personal-blog-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "node check-server-running.js || astro dev",
    "start": "node check-server-running.js || astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "tunnel": "lt -p 4321 --subdomain mfyzcom",
    "ng": "ngrok http 4321 --response-header-add \"Access-Control-Allow-Origin: *\"",
    "test": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "check": "astro check --minimumSeverity error",
    "check:full": "astro check",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "4.0.8",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/tailwind": "^6.0.0",
    "@resvg/resvg-js": "^2.6.2",
    "astro": "^5.7.5",
    "axios": "^1.7.9",
    "date-fns": "^4.1.0",
    "reading-time": "^1.5.0",
    "remark-toc": "^9.0.0",
    "satori": "^0.12.1",
    "tailwindcss": "^3.0.24",
    "typescript": "^5.8.3",
    "unist-util-visit": "^5.0.0",
    "vitest": "^3.1.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@shikijs/transformers": "^1.22.0",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^22.15.18",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9.20.1",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.1",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rollup-plugin-visualizer": "^6.0.1"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{astro,html,css,md,mdx,json}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "npm run check"
    ]
  }
}
